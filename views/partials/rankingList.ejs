<% if (ranking && ranking.length > 0) { %>
  <div class="ranking-grid modern-grid">
    <% ranking.forEach(function(game){ %>
      <div class="panel">
        <div class="panel-body">
          <article class="ranking-card">
          <% const _rankClass = (game && game.rank && game.rank <= 3) ? ('rank-top rank-' + game.rank) : ''; %>
          <a class="cover-link" href="<%= game.affiliateUrl || game.dlsiteUrl %>" target="_blank" rel="noopener noreferrer sponsored">
            <div class="cover">
            <% if (game.imageUrl) { %>
              <img src="<%= game.imageUrl %>" alt="<%= game.title %>">
            <% } else { %>
              <img src="/images/siteicon.png" alt="cover">
            <% } %>
            <% if (game && game.rank) { %>
              <span class="rank-badge rank-<%= game.rank %>">#<%= game.rank %></span>
            <% } %>
          </div>
        </a>

        <div class="card-body">
          <div class="meta-row">
            <span class="badge genre"><%= game.genre || 'ジャンル不明' %></span>
          </div>
          <h3 class="card-title"><a href="<%= game.affiliateUrl || game.dlsiteUrl %>" target="_blank" rel="noopener noreferrer sponsored"><%= game.title %></a></h3>
          <% if (game.circle) { %><div class="card-sub">サークル: <%= game.circle %></div><% } %>
          <p class="card-excerpt"><%= (game.description || '').replace(/<[^>]*>/g, '').slice(0,140) %><%= (game.description || '').length > 140 ? '…' : '' %></p>
          <div class="card-actions">
            <a class="btn-dlsite" href="<%= game.affiliateUrl || game.dlsiteUrl %>" target="_blank" rel="noopener noreferrer sponsored">DLsiteで見る</a>
          </div>
          </article>
        </div>
      </div>
    <% }); %>
  </div>
  <% /* ページネーションは親テンプレート（例: views/ranking.ejs）が表示を担当します。部分テンプレートではグリッドのみを返します。 */ %>
<% } %>
