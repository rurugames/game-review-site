<section class="page-section">
  <div class="form-container">
    <h1>お問い合わせ</h1>

    <% if (sent) { %>
      <div class="success-message" style="margin-bottom:1rem;">
        <p>送信しました。お問い合わせありがとうございます。</p>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="error-message" style="margin-bottom:1rem;">
        <p><%= error %></p>
      </div>
    <% } %>

    <form class="article-form" method="post" action="/contact" aria-label="お問い合わせフォーム">
      <div class="form-row">
        <div class="form-group">
          <label for="name">お名前</label>
          <input id="name" name="name" type="text" maxlength="80" value="<%= (form && form.name) ? form.name : '' %>" required>
        </div>
        <div class="form-group">
          <label for="email">返信先メールアドレス</label>
          <input id="email" name="email" type="email" maxlength="120" value="<%= (form && form.email) ? form.email : '' %>" required>
        </div>
      </div>

      <div class="form-group">
        <label for="subject">件名</label>
        <input id="subject" name="subject" type="text" maxlength="120" value="<%= (form && form.subject) ? form.subject : '' %>" required>
      </div>

      <div class="form-group">
        <label for="message">内容</label>
        <textarea id="message" name="message" maxlength="4000" required><%= (form && form.message) ? form.message : '' %></textarea>
      </div>

      <!-- bot対策（表示されません） -->
      <div style="position:absolute; left:-9999px; width:1px; height:1px; overflow:hidden;" aria-hidden="true">
        <label for="company">会社名</label>
        <input id="company" name="company" type="text" tabindex="-1" autocomplete="off">
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">送信</button>
        <a href="/help" class="btn-secondary">ヘルプに戻る</a>
      </div>
    </form>
  </div>
</section>
