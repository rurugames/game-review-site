<div class="dashboard">
  <% function buildQs(overrides) {
       const q = Object.assign({}, query || {});
       for (const k in overrides) q[k] = overrides[k];
       const parts = [];
       for (const k in q) {
         if (q[k] === undefined || q[k] === null || q[k] === '') continue;
         parts.push(encodeURIComponent(k) + '=' + encodeURIComponent(q[k]));
       }
       return parts.length ? ('?' + parts.join('&')) : '';
     }

     const dayOptions = [7, 30, 90];

     const hasDailyAccess = (typeof dailyAccessTrend !== 'undefined' && dailyAccessTrend && dailyAccessTrend.length > 0);
     const hasRelatedAnalytics = (
       (typeof relatedClicksByBlock !== 'undefined' && relatedClicksByBlock && relatedClicksByBlock.length > 0) ||
       (typeof relatedImpressionsByBlock !== 'undefined' && relatedImpressionsByBlock && relatedImpressionsByBlock.length > 0)
     );
  %>

  <h1>ダッシュボード</h1>

  <% if (typeof recentComments !== 'undefined' && recentComments && recentComments.length > 0) { %>
    <section class="page-section" aria-label="最新コメント">
      <div class="page-header">
        <div style="display:flex; align-items:center; justify-content:space-between; gap:1rem;">
          <h2 class="section-title" style="margin:0;">最新コメント</h2>
          <button type="button" class="per-button section-toggle" data-section-toggle aria-expanded="true" aria-controls="recent-comments-body" title="表示/非表示">
            <span class="caret">▼</span>
          </button>
        </div>
        <p class="section-lead">直近のコメント（最大<%= recentComments.length %>件）です。</p>
      </div>

      <div id="recent-comments-body" data-section-body>
        <div class="panel">
          <div class="panel-body">
            <table class="articles-table" style="margin-top:0;">
              <thead>
                <tr>
                  <th>日時</th>
                  <th>記事</th>
                  <th>投稿者</th>
                  <th>内容</th>
                </tr>
              </thead>
              <tbody>
                <% recentComments.forEach(function(c){ %>
                  <tr>
                    <td><%= c.createdAt ? new Date(c.createdAt).toLocaleString('ja-JP') : '' %></td>
                    <td>
                      <% if (c.article && c.article._id) { %>
                        <a href="/articles/<%= c.article._id %>"><%= c.article.title || c.article.gameTitle || '（無題）' %></a>
                      <% } else { %>
                        (不明)
                      <% } %>
                    </td>
                    <td><%= (c.author && (c.author.displayName || c.author.email)) ? (c.author.displayName || c.author.email) : '（不明）' %></td>
                    <td>
                      <% const txt = String(c.content || ''); %>
                      <%= txt.length > 140 ? (txt.slice(0, 140) + '…') : txt %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>
  <% } %>

  <nav class="per-toggle" aria-label="ダッシュボード" style="margin: 0.5rem 0 1.25rem;" data-dashboard-tabs>
    <span class="per-label">表示:</span>
    <% if (hasDailyAccess) { %>
      <a class="per-button" href="#daily-access" data-tab="daily-access">日別アクセス</a>
    <% } %>
    <% if (hasRelatedAnalytics) { %>
      <a class="per-button" href="#related-analytics" data-tab="related-analytics">関連記事CTR</a>
      <a class="per-button" href="#related-daily-ctr">└ 日別CTR推移</a>
      <a class="per-button" href="#related-details">└ 詳細</a>
    <% } %>
    <a class="per-button" href="#my-articles" data-tab="my-articles">記事管理</a>
  </nav>

  <% if (hasDailyAccess) { %>
    <section id="daily-access" class="page-section" aria-label="日別アクセス数" data-tabpanel="daily-access">
      <div class="page-header">
        <div style="display:flex; align-items:center; justify-content:space-between; gap:1rem;">
          <h2 class="section-title" style="margin:0;">日別アクセス数（直近<%= (typeof days !== 'undefined' && days) ? days : 30 %>日）</h2>
          <button type="button" class="per-button section-toggle" data-section-toggle aria-expanded="true" aria-controls="daily-access-body" title="表示/非表示">
            <span class="caret">▼</span>
          </button>
        </div>
        <p class="section-lead">あなたの記事詳細ページの閲覧数（PV）の合計です（JST基準）。</p>
      </div>
      <div id="daily-access-body" data-section-body>
        <div class="panel">
          <div class="panel-body">
          <div class="per-toggle" aria-label="集計期間切替" style="margin-bottom: 1rem;">
            <span class="per-label">期間:</span>
            <% dayOptions.forEach(function(opt){ %>
              <a class="per-button <%= (typeof days !== 'undefined' && days === opt) ? 'active' : '' %>" href="<%= buildQs({ days: opt, page: 1 }) %>"><%= opt %>日</a>
            <% }); %>
          </div>

          <table class="articles-table" style="margin-top:0.5rem;">
            <thead>
              <tr>
                <th>日付</th>
                <th>アクセス数</th>
              </tr>
            </thead>
            <tbody>
              <% const dailyAccessSorted = dailyAccessTrend.slice().sort((a, b) => String(b.day).localeCompare(String(a.day))); %>
              <% dailyAccessSorted.forEach(row => { %>
                <tr>
                  <td><%= row.day %></td>
                  <td><%= row.views %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </section>
  <% } %>

  <% if (hasRelatedAnalytics) { %>
    <section id="related-analytics" class="page-section" aria-label="関連記事クリック集計" data-tabpanel="related-analytics">
      <div class="page-header">
        <div style="display:flex; align-items:center; justify-content:space-between; gap:1rem;">
          <h2 class="section-title" style="margin:0;">関連記事クリック（直近<%= (typeof days !== 'undefined' && days) ? days : 30 %>日）</h2>
          <button type="button" class="per-button section-toggle" data-section-toggle aria-expanded="true" aria-controls="related-analytics-body" title="表示/非表示">
            <span class="caret">▼</span>
          </button>
        </div>
        <p class="section-lead">記事末尾の「同属性/同サークル」導線のクリック数とCTR（クリック/表示）です。</p>
      </div>
      <div id="related-analytics-body" data-section-body>
        <div class="panel">
          <div class="panel-body">
          <div class="per-toggle" aria-label="集計期間切替" style="margin-bottom: 1rem;">
            <span class="per-label">期間:</span>
            <% dayOptions.forEach(function(opt){ %>
              <a class="per-button <%= (typeof days !== 'undefined' && days === opt) ? 'active' : '' %>" href="<%= buildQs({ days: opt, page: 1 }) %>"><%= opt %>日</a>
            <% }); %>
          </div>

          <h3 style="margin:0 0 0.75rem;">概要</h3>

          <div class="articles-grid" style="grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));">
            <article class="article-card">
              <div class="article-content">
                <h3 style="margin:0 0 0.5rem;">ブロック別クリック数</h3>
                <ul style="margin:0; padding-left: 1.25rem;">
                  <% relatedClicksByBlock.forEach(row => { %>
                    <li>
                      <strong><%= row._id === 'same_attribute' ? '同属性' : (row._id === 'same_developer' ? '同サークル' : row._id) %></strong>
                      : <%= row.count %>
                    </li>
                  <% }); %>
                </ul>
              </div>
            </article>

            <% if (typeof relatedDailyCtrTrend !== 'undefined' && relatedDailyCtrTrend && relatedDailyCtrTrend.length > 0) { %>
              <article id="related-daily-ctr" class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">日別CTR推移</h3>
                  <p style="margin:0 0 0.75rem; color: var(--text-muted);">JST基準。合計（同属性＋同サークル）とブロック別の推移です。</p>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>日付</th>
                        <th>合計CTR</th>
                        <th>合計 クリック/表示</th>
                        <th>同属性CTR</th>
                        <th>同属性 クリック/表示</th>
                        <th>同サークルCTR</th>
                        <th>同サークル クリック/表示</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedDailyCtrTrend.forEach(row => { %>
                        <tr>
                          <td><%= row.day %></td>
                          <td><%= row.total && row.total.ctr !== null ? ((row.total.ctr * 100).toFixed(1) + '%') : '-' %></td>
                          <td><%= row.total ? (row.total.clicks + '/' + row.total.impressions) : '-' %></td>
                          <td><%= row.same_attribute && row.same_attribute.ctr !== null ? ((row.same_attribute.ctr * 100).toFixed(1) + '%') : '-' %></td>
                          <td><%= row.same_attribute ? (row.same_attribute.clicks + '/' + row.same_attribute.impressions) : '-' %></td>
                          <td><%= row.same_developer && row.same_developer.ctr !== null ? ((row.same_developer.ctr * 100).toFixed(1) + '%') : '-' %></td>
                          <td><%= row.same_developer ? (row.same_developer.clicks + '/' + row.same_developer.impressions) : '-' %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedCtrByBlock !== 'undefined' && relatedCtrByBlock && relatedCtrByBlock.length > 0) { %>
              <article class="article-card">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">ブロック別CTR</h3>
                  <ul style="margin:0; padding-left: 1.25rem;">
                    <% relatedCtrByBlock.forEach(row => { %>
                      <li>
                        <strong><%= row.block === 'same_attribute' ? '同属性' : (row.block === 'same_developer' ? '同サークル' : row.block) %></strong>
                        : <%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %>
                        （<%= row.clicks %>/<%= row.impressions %>）
                      </li>
                    <% }); %>
                  </ul>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedCtrByPosition !== 'undefined' && relatedCtrByPosition && relatedCtrByPosition.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">位置別CTR（上位）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>ブロック</th>
                        <th>位置</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedCtrByPosition.slice(0, 10).forEach(row => { %>
                        <tr>
                          <td><%= row.block === 'same_attribute' ? '同属性' : (row.block === 'same_developer' ? '同サークル' : row.block) %></td>
                          <td><%= row.position ? row.position : '-' %></td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

          </div>

          <h3 id="related-details" style="margin:1rem 0 0.75rem;">詳細</h3>

          <div class="articles-grid" style="grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));">

            <% if (typeof relatedCtrByTag !== 'undefined' && relatedCtrByTag && relatedCtrByTag.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">タグ別CTR（同属性）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>タグ</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                        <th>表示数</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedCtrByTag.forEach(row => { %>
                        <tr>
                          <td>
                            <a href="/articles?tags=<%= encodeURIComponent(row.tag) %>"><%= row.tag %></a>
                          </td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                          <td><%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedCtrByDeveloper !== 'undefined' && relatedCtrByDeveloper && relatedCtrByDeveloper.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">開発元別CTR（同サークル）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>開発元</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                        <th>表示数</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedCtrByDeveloper.forEach(row => { %>
                        <tr>
                          <td>
                            <a href="/articles?q=<%= encodeURIComponent(row.developer) %>"><%= row.developer %></a>
                          </td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                          <td><%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedClicksTopDestinations !== 'undefined' && relatedClicksTopDestinations && relatedClicksTopDestinations.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">クリック上位（行き先）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>ブロック</th>
                        <th>行き先</th>
                        <th>クリック数</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedClicksTopDestinations.forEach(row => { %>
                        <tr>
                          <td>
                            <%= row.block === 'same_attribute' ? '同属性' : (row.block === 'same_developer' ? '同サークル' : row.block) %>
                          </td>
                          <td>
                            <% if (row.toArticleId) { %>
                              <a href="/articles/<%= row.toArticleId %>">
                                <%= row.toTitle || row.toGameTitle || String(row.toArticleId) %>
                              </a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td><%= row.count %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedWorstCtrToArticles !== 'undefined' && relatedWorstCtrToArticles && relatedWorstCtrToArticles.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">低CTR（行き先）</h3>
                  <p style="margin:0 0 0.75rem; color: var(--text-muted);">表示（impression）が多いのにクリックされていない行き先の上位です。</p>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>行き先</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                        <th>表示数</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedWorstCtrToArticles.forEach(row => { %>
                        <tr>
                          <td>
                            <% if (row.toArticleId) { %>
                              <a href="/articles/<%= row.toArticleId %>">
                                <%= row.toTitle || row.toGameTitle || String(row.toArticleId) %>
                              </a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                          <td><%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedClicksTopFromArticles !== 'undefined' && relatedClicksTopFromArticles && relatedClicksTopFromArticles.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">クリック上位（元記事）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>元記事</th>
                        <th>クリック数</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedClicksTopFromArticles.forEach(row => { %>
                        <tr>
                          <td>
                            <% if (row.fromArticleId) { %>
                              <a href="/articles/<%= row.fromArticleId %>">
                                <%= row.fromTitle || row.fromGameTitle || String(row.fromArticleId) %>
                              </a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td><%= row.clicks %></td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedWorstCtrFromArticles !== 'undefined' && relatedWorstCtrFromArticles && relatedWorstCtrFromArticles.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">低CTR（元記事）</h3>
                  <p style="margin:0 0 0.75rem; color: var(--text-muted);">表示（impression）が多いのにクリックされていない記事の上位です。</p>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>元記事</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                        <th>表示数</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedWorstCtrFromArticles.forEach(row => { %>
                        <tr>
                          <td>
                            <% if (row.fromArticleId) { %>
                              <a href="/articles/<%= row.fromArticleId %>">
                                <%= row.fromTitle || row.fromGameTitle || String(row.fromArticleId) %>
                              </a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                          <td><%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedClicks !== 'undefined' && relatedClicks && relatedClicks.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">直近のクリック（50件）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>日時</th>
                        <th>元記事</th>
                        <th>ブロック</th>
                        <th>先記事</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedClicks.forEach(ev => { %>
                        <tr>
                          <td><%= ev.ts ? new Date(ev.ts).toLocaleString('ja-JP') : '' %></td>
                          <td>
                            <% if (ev.fromArticle && ev.fromArticle._id) { %>
                              <a href="/articles/<%= ev.fromArticle._id %>"><%= ev.fromArticle.title || ev.fromArticle.gameTitle || '（無題）' %></a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td>
                            <%= ev.block === 'same_attribute' ? '同属性' : (ev.block === 'same_developer' ? '同サークル' : ev.block) %>
                            <% if (ev.position) { %>
                              （<%= ev.position %>）
                            <% } %>
                          </td>
                          <td>
                            <% if (ev.toArticle && ev.toArticle._id) { %>
                              <a href="/articles/<%= ev.toArticle._id %>"><%= ev.toArticle.title || ev.toArticle.gameTitle || '（無題）' %></a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>
          </div>
          </div>
        </div>
      </div>
    </section>
  <% } %>

  <section id="my-articles" class="page-section" aria-label="記事管理" data-tabpanel="my-articles">
    <div class="dashboard-header" style="display:flex; align-items:center; justify-content:space-between; gap:1rem;">
      <h2 style="margin:0;">記事管理</h2>
      <div style="display:flex; align-items:center; gap:0.5rem;">
        <div class="header-actions">
          <a href="/articles/new" class="btn-primary">新規記事作成</a>
        </div>
        <button type="button" class="per-button section-toggle" data-section-toggle aria-expanded="true" aria-controls="my-articles-body" title="表示/非表示">
          <span class="caret">▼</span>
        </button>
      </div>
    </div>

    <div id="my-articles-body" data-section-body>

  <% if (articles.length > 0) { %>
    <div class="per-toggle" aria-label="表示件数切替">
      <span class="per-label">表示件数:</span>
      <% const perOptions = [10, 20, 50, 100]; %>
      <% perOptions.forEach(function(opt){ %>
        <a class="per-button <%= (typeof per !== 'undefined' && per === opt) ? 'active' : '' %>" href="<%= buildQs({ per: opt, page: 1 }) %>"><%= opt %></a>
      <% }); %>
    </div>

    <div class="bulk-actions">
      <button id="selectAllArticles" class="btn-secondary">全選択</button>
      <button id="deselectAllArticles" class="btn-secondary">全解除</button>
      <button id="publishSelectedArticles" class="btn-primary" style="display: none;">選択した記事を公開</button>
      <button id="unpublishSelectedArticles" class="btn-secondary" style="display: none;">選択した記事を下書きに</button>
      <button id="publishAllDraftArticles" class="btn-primary">下書きをすべて公開</button>
      <button id="deleteSelectedArticles" class="btn-delete" style="display: none;">選択した記事を削除</button>
    </div>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
      <nav class="pagination" aria-label="ページネーション（上部）">
        <% if (page > 1) { %>
          <a class="page-btn prev" href="<%= buildQs({ per: per, page: page - 1 }) %>">« 前へ</a>
        <% } else { %>
          <span class="page-btn disabled">« 前へ</span>
        <% } %>

        <% for (let p = 1; p <= totalPages; p++) { %>
          <% if (Math.abs(p - page) <= 2 || p === 1 || p === totalPages) { %>
            <a class="page-btn <%= p === page ? 'active' : '' %>" href="<%= buildQs({ per: per, page: p }) %>"><%= p %></a>
