<div class="dashboard">
  <% function buildQs(overrides) {
       const q = Object.assign({}, query || {});
       for (const k in overrides) q[k] = overrides[k];
       const parts = [];
       for (const k in q) {
         if (q[k] === undefined || q[k] === null || q[k] === '') continue;
         parts.push(encodeURIComponent(k) + '=' + encodeURIComponent(q[k]));
       }
       return parts.length ? ('?' + parts.join('&')) : '';
     }
  %>

  <h1>ダッシュボード</h1>

  <% if (
    (typeof relatedClicksByBlock !== 'undefined' && relatedClicksByBlock && relatedClicksByBlock.length > 0) ||
    (typeof relatedImpressionsByBlock !== 'undefined' && relatedImpressionsByBlock && relatedImpressionsByBlock.length > 0)
  ) { %>
    <section class="page-section" aria-label="関連記事クリック集計">
      <div class="page-header">
        <h2 class="section-title">関連記事クリック（直近30日）</h2>
        <p class="section-lead">記事末尾の「同属性/同サークル」導線のクリック数とCTR（クリック/表示）です。</p>
      </div>
      <div class="panel">
        <div class="panel-body">
          <div class="articles-grid" style="grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));">
            <article class="article-card">
              <div class="article-content">
                <h3 style="margin:0 0 0.5rem;">ブロック別クリック数</h3>
                <ul style="margin:0; padding-left: 1.25rem;">
                  <% relatedClicksByBlock.forEach(row => { %>
                    <li>
                      <strong><%= row._id === 'same_attribute' ? '同属性' : (row._id === 'same_developer' ? '同サークル' : row._id) %></strong>
                      : <%= row.count %>
                    </li>
                  <% }); %>
                </ul>
              </div>
            </article>

            <% if (typeof relatedCtrByBlock !== 'undefined' && relatedCtrByBlock && relatedCtrByBlock.length > 0) { %>
              <article class="article-card">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">ブロック別CTR</h3>
                  <ul style="margin:0; padding-left: 1.25rem;">
                    <% relatedCtrByBlock.forEach(row => { %>
                      <li>
                        <strong><%= row.block === 'same_attribute' ? '同属性' : (row.block === 'same_developer' ? '同サークル' : row.block) %></strong>
                        : <%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %>
                        （<%= row.clicks %>/<%= row.impressions %>）
                      </li>
                    <% }); %>
                  </ul>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedCtrByPosition !== 'undefined' && relatedCtrByPosition && relatedCtrByPosition.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">位置別CTR（上位）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>ブロック</th>
                        <th>位置</th>
                        <th>CTR</th>
                        <th>クリック/表示</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedCtrByPosition.slice(0, 10).forEach(row => { %>
                        <tr>
                          <td><%= row.block === 'same_attribute' ? '同属性' : (row.block === 'same_developer' ? '同サークル' : row.block) %></td>
                          <td><%= row.position ? row.position : '-' %></td>
                          <td><%= row.ctr === null ? '-' : ((row.ctr * 100).toFixed(1) + '%') %></td>
                          <td><%= row.clicks %>/<%= row.impressions %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedClicksTopDestinations !== 'undefined' && relatedClicksTopDestinations && relatedClicksTopDestinations.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">クリック上位（行き先）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>ブロック</th>
                        <th>行き先</th>
                        <th>クリック数</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedClicksTopDestinations.forEach(row => { %>
                        <tr>
                          <td>
                            <%= row.block === 'same_attribute' ? '同属性' : (row.block === 'same_developer' ? '同サークル' : row.block) %>
                          </td>
                          <td>
                            <% if (row.toArticleId) { %>
                              <a href="/articles/<%= row.toArticleId %>">
                                <%= row.toTitle || row.toGameTitle || String(row.toArticleId) %>
                              </a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td><%= row.count %></td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>

            <% if (typeof relatedClicks !== 'undefined' && relatedClicks && relatedClicks.length > 0) { %>
              <article class="article-card" style="grid-column: 1 / -1;">
                <div class="article-content">
                  <h3 style="margin:0 0 0.5rem;">直近のクリック（50件）</h3>
                  <table class="articles-table" style="margin-top:0.5rem;">
                    <thead>
                      <tr>
                        <th>日時</th>
                        <th>元記事</th>
                        <th>ブロック</th>
                        <th>先記事</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% relatedClicks.forEach(ev => { %>
                        <tr>
                          <td><%= ev.ts ? new Date(ev.ts).toLocaleString('ja-JP') : '' %></td>
                          <td>
                            <% if (ev.fromArticle && ev.fromArticle._id) { %>
                              <a href="/articles/<%= ev.fromArticle._id %>"><%= ev.fromArticle.title || ev.fromArticle.gameTitle || '（無題）' %></a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                          <td>
                            <%= ev.block === 'same_attribute' ? '同属性' : (ev.block === 'same_developer' ? '同サークル' : ev.block) %>
                            <% if (ev.position) { %>
                              （<%= ev.position %>）
                            <% } %>
                          </td>
                          <td>
                            <% if (ev.toArticle && ev.toArticle._id) { %>
                              <a href="/articles/<%= ev.toArticle._id %>"><%= ev.toArticle.title || ev.toArticle.gameTitle || '（無題）' %></a>
                            <% } else { %>
                              (不明)
                            <% } %>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </article>
            <% } %>
          </div>
        </div>
      </div>
    </section>
  <% } %>

  <div class="dashboard-header">
    <h2>あなたの記事</h2>
    <div class="header-actions">
      <a href="/articles/new" class="btn-primary">新規記事作成</a>
    </div>
  </div>

  <% if (articles.length > 0) { %>
    <div class="per-toggle" aria-label="表示件数切替">
      <span class="per-label">表示件数:</span>
      <% const perOptions = [10, 20, 50, 100]; %>
      <% perOptions.forEach(function(opt){ %>
        <a class="per-button <%= (typeof per !== 'undefined' && per === opt) ? 'active' : '' %>" href="<%= buildQs({ per: opt, page: 1 }) %>"><%= opt %></a>
      <% }); %>
    </div>

    <div class="bulk-actions">
      <button id="selectAllArticles" class="btn-secondary">全選択</button>
      <button id="deselectAllArticles" class="btn-secondary">全解除</button>
      <button id="publishSelectedArticles" class="btn-primary" style="display: none;">選択した記事を公開</button>
      <button id="unpublishSelectedArticles" class="btn-secondary" style="display: none;">選択した記事を下書きに</button>
      <button id="deleteSelectedArticles" class="btn-delete" style="display: none;">選択した記事を削除</button>
    </div>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
      <nav class="pagination" aria-label="ページネーション（上部）">
        <% if (page > 1) { %>
          <a class="page-btn prev" href="<%= buildQs({ per: per, page: page - 1 }) %>">« 前へ</a>
        <% } else { %>
          <span class="page-btn disabled">« 前へ</span>
        <% } %>

        <% for (let p = 1; p <= totalPages; p++) { %>
          <% if (Math.abs(p - page) <= 2 || p === 1 || p === totalPages) { %>
            <a class="page-btn <%= p === page ? 'active' : '' %>" href="<%= buildQs({ per: per, page: p }) %>"><%= p %></a>
          <% } else if (p === 2 && page > 4) { %>
            <span class="ellipsis">…</span>
          <% } else if (p === totalPages - 1 && page < totalPages - 3) { %>
            <span class="ellipsis">…</span>
          <% } %>
        <% } %>

        <% if (page < totalPages) { %>
          <a class="page-btn next" href="<%= buildQs({ per: per, page: page + 1 }) %>">次へ »</a>
        <% } else { %>
          <span class="page-btn disabled">次へ »</span>
        <% } %>
      </nav>
    <% } %>

    <table class="articles-table">
      <thead>
        <tr>
          <th><input type="checkbox" id="selectAllCheckbox"></th>
          <th>タイトル</th>
          <th>ゲームタイトル</th>
          <th>ステータス</th>
          <th>閲覧数</th>
          <th>作成日</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% articles.forEach(article => { %>
          <tr>
            <td><input type="checkbox" class="article-checkbox" value="<%= article._id %>"></td>
            <td><a href="/articles/<%= article._id %>"><%= article.title %></a></td>
            <td><%= article.gameTitle %></td>
            <td>
              <span class="status-badge status-<%= article.status %>">
                <%= article.status === 'published' ? '公開中' : '下書き' %>
              </span>
            </td>
            <td><%= article.views %></td>
            <td><%= new Date(article.createdAt).toLocaleDateString('ja-JP') %></td>
            <td class="actions">
              <a href="/articles/<%= article._id %>/edit" class="btn-edit">編集</a>
              <form action="/articles/<%= article._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn-delete" onclick="return confirm('本当に削除しますか？')">削除</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
      <nav class="pagination" aria-label="ページネーション">
        <% if (page > 1) { %>
          <a class="page-btn prev" href="<%= buildQs({ per: per, page: page - 1 }) %>">« 前へ</a>
        <% } else { %>
          <span class="page-btn disabled">« 前へ</span>
        <% } %>

        <% for (let p = 1; p <= totalPages; p++) { %>
          <% if (Math.abs(p - page) <= 2 || p === 1 || p === totalPages) { %>
            <a class="page-btn <%= p === page ? 'active' : '' %>" href="<%= buildQs({ per: per, page: p }) %>"><%= p %></a>
          <% } else if (p === 2 && page > 4) { %>
            <span class="ellipsis">…</span>
          <% } else if (p === totalPages - 1 && page < totalPages - 3) { %>
            <span class="ellipsis">…</span>
          <% } %>
        <% } %>

        <% if (page < totalPages) { %>
          <a class="page-btn next" href="<%= buildQs({ per: per, page: page + 1 }) %>">次へ »</a>
        <% } else { %>
          <span class="page-btn disabled">次へ »</span>
        <% } %>
      </nav>
    <% } %>
  <% } else { %>
    <div class="no-articles">
      <p>まだ記事がありません。</p>
      <a href="/articles/new" class="btn-primary">最初の記事を作成する</a>
    </div>
  <% } %>
</div>

<style>
.bulk-actions {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
  align-items: center;
}

.articles-table th:first-child,
.articles-table td:first-child {
  width: 40px;
  text-align: center;
}

.articles-table input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const selectAllCheckbox = document.getElementById('selectAllCheckbox');
  const selectAllBtn = document.getElementById('selectAllArticles');
  const deselectAllBtn = document.getElementById('deselectAllArticles');
  const publishSelectedBtn = document.getElementById('publishSelectedArticles');
  const unpublishSelectedBtn = document.getElementById('unpublishSelectedArticles');
  const deleteSelectedBtn = document.getElementById('deleteSelectedArticles');
  const articleCheckboxes = document.querySelectorAll('.article-checkbox');

  // チェックボックスの状態変化を監視
  function updateActionButtons() {
    const checkedCount = document.querySelectorAll('.article-checkbox:checked').length;
    if (checkedCount > 0) {
      publishSelectedBtn.style.display = 'block';
      publishSelectedBtn.textContent = `選択した記事を公開 (${checkedCount}件)`;
      unpublishSelectedBtn.style.display = 'block';
      unpublishSelectedBtn.textContent = `選択した記事を下書きに (${checkedCount}件)`;
      deleteSelectedBtn.style.display = 'block';
      deleteSelectedBtn.textContent = `選択した記事を削除 (${checkedCount}件)`;
    } else {
      publishSelectedBtn.style.display = 'none';
      unpublishSelectedBtn.style.display = 'none';
      deleteSelectedBtn.style.display = 'none';
    }
  }

  // 各チェックボックスにイベントリスナーを追加
  articleCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateActionButtons);
  });

  // ヘッダーのチェックボックスで全選択/全解除
  if (selectAllCheckbox) {
    selectAllCheckbox.addEventListener('change', function() {
      articleCheckboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
      });
      updateDeleteButton();
    });
  }

  // 全選択ボタン
  if (selectAllBtn) {
    selectAllBtn.addEventListener('click', function() {
      articleCheckboxes.forEach(checkbox => {
        checkbox.checked = true;
      });
      if (selectAllCheckbox) selectAllCheckbox.checked = true;
      updateActionButtons();
    });
  }

  // 全解除ボタン
  if (deselectAllBtn) {
    deselectAllBtn.addEventListener('click', function() {
      articleCheckboxes.forEach(checkbox => {
        checkbox.checked = false;
      });
      if (selectAllCheckbox) selectAllCheckbox.checked = false;
      updateActionButtons();
    });
  }

  // 選択した記事を公開
  if (publishSelectedBtn) {
    publishSelectedBtn.addEventListener('click', async function() {
      const selectedIds = Array.from(document.querySelectorAll('.article-checkbox:checked'))
        .map(checkbox => checkbox.value);

      if (selectedIds.length === 0) {
        alert('公開する記事を選択してください。');
        return;
      }

      if (!confirm(`${selectedIds.length}件の記事を公開しますか？`)) {
        return;
      }

      try {
        const response = await fetch('/articles/bulk-update-status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ articleIds: selectedIds, status: 'published' })
        });

        const data = await response.json();

        if (data.success) {
          alert(`${data.updatedCount}件の記事を公開しました。`);
          location.reload();
        } else {
          alert('更新に失敗しました: ' + (data.error || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('更新に失敗しました。');
      }
    });
  }

  // 選択した記事を下書きに
  if (unpublishSelectedBtn) {
    unpublishSelectedBtn.addEventListener('click', async function() {
      const selectedIds = Array.from(document.querySelectorAll('.article-checkbox:checked'))
        .map(checkbox => checkbox.value);

      if (selectedIds.length === 0) {
        alert('下書きにする記事を選択してください。');
        return;
      }

      if (!confirm(`${selectedIds.length}件の記事を下書きに変更しますか？`)) {
        return;
      }

      try {
        const response = await fetch('/articles/bulk-update-status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ articleIds: selectedIds, status: 'draft' })
        });

        const data = await response.json();

        if (data.success) {
          alert(`${data.updatedCount}件の記事を下書きに変更しました。`);
          location.reload();
        } else {
          alert('更新に失敗しました: ' + (data.error || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('更新に失敗しました。');
      }
    });
  }

  // 選択した記事を削除
  if (deleteSelectedBtn) {
    deleteSelectedBtn.addEventListener('click', async function() {
      const selectedIds = Array.from(document.querySelectorAll('.article-checkbox:checked'))
        .map(checkbox => checkbox.value);

      if (selectedIds.length === 0) {
        alert('削除する記事を選択してください。');
        return;
      }

      if (!confirm(`${selectedIds.length}件の記事を削除しますか？この操作は取り消せません。`)) {
        return;
      }

      try {
        const response = await fetch('/articles/bulk-delete', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ articleIds: selectedIds })
        });

        const data = await response.json();

        if (data.success) {
          alert(`${data.deletedCount}件の記事を削除しました。`);
          location.reload();
        } else {
          alert('削除に失敗しました: ' + (data.error || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('削除に失敗しました。');
      }
    });
  }
});
</script>
