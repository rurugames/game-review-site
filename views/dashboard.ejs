<style>
.dashboard [data-tabpanel] { display: none; }
.dashboard [data-tabpanel][data-open="true"] { display: block; }

.section-toggle .caret {
  display: inline-block;
  transform-origin: 50% 50%;
  transition: transform 0.12s ease-in-out;
}

.section-toggle[aria-expanded="false"] .caret {
  transform: rotate(-90deg);
}

.bulk-actions {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
  align-items: center;
}

.articles-table th:first-child,
.articles-table td:first-child {
  width: 40px;
  text-align: center;
}

.articles-table input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // --- Dashboard tabs (hash-driven) ---
  const tabNav = document.querySelector('[data-dashboard-tabs]');
  const tabButtons = tabNav ? Array.from(tabNav.querySelectorAll('[data-tab]')) : [];
  const tabPanels = Array.from(document.querySelectorAll('[data-tabpanel]'));

  function isPanelOpen(panel) {
    return panel.getAttribute('data-open') === 'true';
  }

  function syncTabButtonStates() {
    tabButtons.forEach(btn => {
      const id = btn.getAttribute('data-tab');
      const panel = id ? document.querySelector(`[data-tabpanel="${id}"]`) : null;
      const isActive = !!(panel && isPanelOpen(panel));
      btn.classList.toggle('active', isActive);
      if (isActive) btn.setAttribute('aria-pressed', 'true');
      else btn.setAttribute('aria-pressed', 'false');
    });
  }

  function normalizeHashToTabId(hash) {
    const id = (hash || '').replace(/^#/, '');
    if (!id) return '';
    if (id === 'related-daily-ctr' || id === 'related-details') return 'related-analytics';
    return id;
  }

  function setPanelOpenById(tabId, open) {
    if (!tabId) return;
    const panel = document.querySelector(`[data-tabpanel="${tabId}"]`);
    if (!panel) return;
    panel.setAttribute('data-open', open ? 'true' : 'false');
    syncTabButtonStates();
  }

  function scrollToHashTarget(rawHash) {
    const id = (rawHash || '').replace(/^#/, '');
    if (!id) return;
    const el = document.getElementById(id);
    if (!el) return;
    requestAnimationFrame(() => {
      el.scrollIntoView({ block: 'start', behavior: 'auto' });
    });
  }

  if (tabNav && tabPanels.length) {
    // Initialize: closed
    tabPanels.forEach(panel => panel.setAttribute('data-open', 'false'));
    syncTabButtonStates();

    // Click on main tab buttons (always open)
    tabButtons.forEach(btn => {
      btn.addEventListener('click', function(e) {
        const tabId = this.getAttribute('data-tab');
        if (!tabId) return;
        e.preventDefault();
        setPanelOpenById(tabId, true);
        history.replaceState(null, '', `#${tabId}`);
        scrollToHashTarget(`#${tabId}`);
      });
    });

    // Deep links and back/forward
    window.addEventListener('hashchange', function() {
      const rawHash = location.hash;
      const tabId = normalizeHashToTabId(rawHash);
      if (tabId) setPanelOpenById(tabId, true);
      if (rawHash && rawHash !== `#${tabId}`) scrollToHashTarget(rawHash);
    });

    // Initial state
    {
      const rawHash = location.hash;
      const tabId = normalizeHashToTabId(rawHash);
      if (tabId) {
        setPanelOpenById(tabId, true);
        if (rawHash && rawHash !== `#${tabId}`) scrollToHashTarget(rawHash);
      } else {
        // Default open: 日別アクセス
        if (document.querySelector('[data-tabpanel="daily-access"]')) setPanelOpenById('daily-access', true);
        else if (document.querySelector('[data-tabpanel="my-articles"]')) setPanelOpenById('my-articles', true);
      }
    }

    // In-page sublinks (switch tab then scroll)
    const subLinks = Array.from(tabNav.querySelectorAll('a[href="#related-daily-ctr"], a[href="#related-details"]'));
    subLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const rawHash = this.getAttribute('href') || '';
        history.replaceState(null, '', rawHash);
        setPanelOpenById('related-analytics', true);
        scrollToHashTarget(rawHash);
      });
    });
  }

  // --- Section inline toggles (▼) ---
  const sectionToggles = Array.from(document.querySelectorAll('[data-section-toggle]'));
  sectionToggles.forEach(btn => {
    const controls = btn.getAttribute('aria-controls');
    const body = controls ? document.getElementById(controls) : null;
    if (!body) return;
    btn.addEventListener('click', function() {
      const expanded = this.getAttribute('aria-expanded') !== 'false';
      this.setAttribute('aria-expanded', expanded ? 'false' : 'true');
      body.style.display = expanded ? 'none' : '';
    });
  });

  const selectAllCheckbox = document.getElementById('selectAllCheckbox');
  const selectAllBtn = document.getElementById('selectAllArticles');
  const deselectAllBtn = document.getElementById('deselectAllArticles');
  const publishSelectedBtn = document.getElementById('publishSelectedArticles');
  const unpublishSelectedBtn = document.getElementById('unpublishSelectedArticles');
  const publishAllDraftBtn = document.getElementById('publishAllDraftArticles');
  const deleteSelectedBtn = document.getElementById('deleteSelectedArticles');
  const articleCheckboxes = document.querySelectorAll('.article-checkbox');

  // チェックボックスの状態変化を監視
  function updateActionButtons() {
    const checkedCount = document.querySelectorAll('.article-checkbox:checked').length;
    if (checkedCount > 0) {
      publishSelectedBtn.style.display = 'block';
      publishSelectedBtn.textContent = `選択した記事を公開 (${checkedCount}件)`;
      unpublishSelectedBtn.style.display = 'block';
      unpublishSelectedBtn.textContent = `選択した記事を下書きに (${checkedCount}件)`;
      deleteSelectedBtn.style.display = 'block';
      deleteSelectedBtn.textContent = `選択した記事を削除 (${checkedCount}件)`;
    } else {
      publishSelectedBtn.style.display = 'none';
      unpublishSelectedBtn.style.display = 'none';
      deleteSelectedBtn.style.display = 'none';
    }
  }

  // 各チェックボックスにイベントリスナーを追加
  articleCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateActionButtons);
  });

  // ヘッダーのチェックボックスで全選択/全解除
  if (selectAllCheckbox) {
    selectAllCheckbox.addEventListener('change', function() {
      articleCheckboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
      });
      updateActionButtons();
    });
  }

  // 全選択ボタン
  if (selectAllBtn) {
    selectAllBtn.addEventListener('click', function() {
      articleCheckboxes.forEach(checkbox => {
        checkbox.checked = true;
      });
      if (selectAllCheckbox) selectAllCheckbox.checked = true;
      updateActionButtons();
    });
  }

  // 全解除ボタン
  if (deselectAllBtn) {
    deselectAllBtn.addEventListener('click', function() {
      articleCheckboxes.forEach(checkbox => {
        checkbox.checked = false;
      });
      if (selectAllCheckbox) selectAllCheckbox.checked = false;
      updateActionButtons();
    });
  }

  // 選択した記事を公開
  if (publishSelectedBtn) {
    publishSelectedBtn.addEventListener('click', async function() {
      const selectedIds = Array.from(document.querySelectorAll('.article-checkbox:checked'))
        .map(checkbox => checkbox.value);

      if (selectedIds.length === 0) {
        alert('公開する記事を選択してください。');
        return;
      }

      if (!confirm(`${selectedIds.length}件の記事を公開しますか？`)) {
        return;
      }

      try {
        const response = await fetch('/articles/bulk-update-status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ articleIds: selectedIds, status: 'published' })
        });

        const data = await response.json();

        if (data.success) {
          alert(`${data.updatedCount}件の記事を公開しました。`);
          location.reload();
        } else {
          alert('更新に失敗しました: ' + (data.error || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('更新に失敗しました。');
      }
    });
  }

  // 選択した記事を下書きに
  if (unpublishSelectedBtn) {
    unpublishSelectedBtn.addEventListener('click', async function() {
      const selectedIds = Array.from(document.querySelectorAll('.article-checkbox:checked'))
        .map(checkbox => checkbox.value);

      if (selectedIds.length === 0) {
        alert('下書きにする記事を選択してください。');
        return;
      }

      if (!confirm(`${selectedIds.length}件の記事を下書きに変更しますか？`)) {
        return;
      }

      try {
        const response = await fetch('/articles/bulk-update-status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ articleIds: selectedIds, status: 'draft' })
        });

        const data = await response.json();

        if (data.success) {
          alert(`${data.updatedCount}件の記事を下書きに変更しました。`);
          location.reload();
        } else {
          alert('更新に失敗しました: ' + (data.error || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('更新に失敗しました。');
      }
    });
  }

  // 選択した記事を削除
  if (deleteSelectedBtn) {
    deleteSelectedBtn.addEventListener('click', async function() {
      const selectedIds = Array.from(document.querySelectorAll('.article-checkbox:checked'))
        .map(checkbox => checkbox.value);

      if (selectedIds.length === 0) {
        alert('削除する記事を選択してください。');
        return;
      }

      if (!confirm(`${selectedIds.length}件の記事を削除しますか？この操作は取り消せません。`)) {
        return;
      }

      try {
        const response = await fetch('/articles/bulk-delete', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ articleIds: selectedIds })
        });

        const data = await response.json();

        if (data.success) {
          alert(`${data.deletedCount}件の記事を削除しました。`);
          location.reload();
        } else {
          alert('削除に失敗しました: ' + (data.error || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('削除に失敗しました。');
      }
    });
  }

  // 下書きをすべて公開
  if (publishAllDraftBtn) {
    publishAllDraftBtn.addEventListener('click', async function () {
      if (!confirm('下書きの記事をすべて公開しますか？')) return;

      try {
        const response = await fetch('/articles/publish-all-drafts', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
        });

        let data = null;
        try {
          data = await response.json();
        } catch (_) {
          const txt = await response.text();
          throw new Error(txt || '不明なエラー');
        }

        if (data && data.success) {
          alert(`${data.updatedCount}件の下書きを公開しました。`);
          location.reload();
        } else {
          alert('公開に失敗しました: ' + ((data && data.error) || '不明なエラー'));
        }
      } catch (error) {
        console.error('エラー:', error);
        alert('公開に失敗しました。');
      }
    });
  }
});
</script>
