# Google OAuth設定
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
CALLBACK_URL=http://localhost:3000/auth/google/callback

# データベース設定
MONGODB_URI=mongodb://localhost:27017/game-review-site

# セッション設定
SESSION_SECRET=your_session_secret_here

# サーバー設定
PORT=3000
NODE_ENV=development

# 公開URL（SEO: canonical / sitemap 用。Render本番では設定推奨）
SITE_URL=

# Google Search Console（所有権確認: HTMLタグ方式）
# Search Consoleの「HTML タグ」に表示される meta の content 値を入れてください
GOOGLE_SITE_VERIFICATION=

# OpenAI API設定（記事自動生成機能用 - オプション）
OPENAI_API_KEY=your_openai_api_key_here

# お問い合わせフォーム（メール送信）
# 送信先（公開しないため、画面やコードに直書きせずENVで管理）
CONTACT_TO_EMAIL=your_admin_email_here
# 送信元（未指定の場合は SMTP_USER を利用）
CONTACT_FROM_EMAIL=

# SMTP設定（どちらか片方の方式で設定）
# 方式A: SMTP_URL を使う（推奨）
SMTP_URL=

# 方式B: 個別設定
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
